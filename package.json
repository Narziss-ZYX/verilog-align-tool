{
  "name": "verilog-align-tool",
  "displayName": "verilog align tool",
  "description": "a tool for verilog code alignment",
  "version": "1.0.0",
  "publisher": "Narziss",
  "license": "LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/Narziss-ZYX/verilog-align-tool.git"
  },
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:verilog.align.tool"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "verilog.align.tool",
        "title": "verilog align tool"
      }
    ],
    "keybindings": [
      {
        "command": "verilog.align.tool",
        "key": "alt+shift+a",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.1.6",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
  },
  "dependencies": {
    "gulp-sass": "^5.1.0"
  }
}
